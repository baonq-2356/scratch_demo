<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_card_scratch_one"
            android:layout_centerInParent="true"
            app:layout_constraintWidth_percent="0.62"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/card_swipe"/>

        <com.example.myapplication.ScratchView
            android:id="@+id/scratch_view"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:clickable="false"
            android:layout_centerInParent="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@+id/img_card_scratch_one"
            app:layout_constraintEnd_toEndOf="@id/img_card_scratch_one"
            app:layout_constraintTop_toTopOf="@id/img_card_scratch_one"
            app:layout_constraintBottom_toBottomOf="@id/img_card_scratch_one"
            app:layout_constraintHeight_percent="0.12"
            android:background="@android:color/transparent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
